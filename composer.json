{
  "name": "bccampus/opentextbooks",
  "description": "Open Textbook Application exploits REST api",
  "type": "library",
  "version": "3.0.0",
  "homepage": "https://github.com/bccampus/opentextbooks",
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Brad Payne",
      "homepage": "https://github.com/bdolor"
    }
  ],
  "autoload": {
    "psr-4": {
      "BCcampus\\Opentextbooks\\": "inc/"
    }
  },
  "config": {
    "platform": {
      "php": "7.0.30"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^5.7|^6.0",
    "humanmade/coding-standards": "^0.2.1|^0.5.0"
  },
  "scripts": {
    "test": [
      "@standards"
    ],
    "standards": [
      "vendor/bin/phpcs --standard=phpcs.ruleset.xml ."
    ]
  },
  "require": {
    "weberhofer/jsonrpcphp": "^2.2",
    "visualappeal/piwik-php-api": "^1.3"
  }
}
